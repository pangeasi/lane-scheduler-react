{
  "name": "@pangeasi/lane-scheduler-react",
  "author": "pangeasi",
  "description": "Flexible drag-and-drop scheduler component for React",
  "repository": {
    "url": "https://github.com/pangeasi/lane-scheduler-react",
    "type": "git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "1.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./styles.css": "./dist/styles.css",
    "./package.json": "./package.json"
  },
  "keywords": [
    "react",
    "scheduler",
    "calendar",
    "drag-drop",
    "appointment",
    "timeline",
    "lane"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json && vite build",
    "build:types": "tsc -p tsconfig.build.json",
    "build:storybook": "STORYBOOK_BASE_PATH=/lane-scheduler-react/ storybook build --output-dir docs",
    "clean": "rm -rf dist",
    "clean:storybook": "rm -rf docs",
    "lint": "eslint .",
    "preview:storybook": "npx http-server docs -p 6007",
    "deploy:storybook": "./scripts/deploy-storybook.sh && git add docs/ && git commit -m 'Deploy Storybook documentation' && git push origin main",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^10.0.7",
    "@storybook/addon-onboarding": "^10.0.7",
    "@storybook/react-vite": "^10.0.7",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.0.7",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.0.7",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2"
  }
}
